---
import IconBolt from '@/assets/icons/bolt.svg'
import { t } from 'i18next'
import Section from './section.astro'
---

<Section>
  <div class="flex flex-col items-center max-w-prose gap-2">
    <h2
      class="text-font-light text-center text-xl animate-fade-in-up animate-delay-200"
    >
      {t("home.hero.preTitle")}
    </h2>
    <h3 class="text-5xl text-center font-bold leading-snug animate-fade-in-up">
      {t("home.hero.title")}
      <img
        loading="eager"
        width="30"
        height="50"
        decoding="async"
        data-nimg="1"
        class="w-[16px] lg:w-[20px] xl:w-[30px] inline-block ml-4 animate-fade-in-up animate-delay-300"
        src={IconBolt.src}
        alt="icono de rayo"
        aria-hidden="true"
        role="presentation"
      />
    </h3>
    <h4
      class="text-font-light text-center text-md animate-fade-in-up animate-delay-200"
    >
      {t("home.hero.subtitle")}
    </h4>
  </div>
  <div class="flex flex-row gap-4 items-center justify-center">
    <a
      class="px-4 py-2 bg-primary border-2 border-primary rounded-md font-semibold text-xl"
      href="https://cal.com/crystal-desarrollo/contanos-tu-idea"
      target="_blank"
      rel="noreferrer"
    >
      {t("home.hero.cta")}
    </a>
    <a
      class="px-4 py-2 border-2 border-primary rounded-md font-semibold text-xl"
      href="#projects"
    >
      {t("home.hero.cta2")}
    </a>
  </div>
</Section>
