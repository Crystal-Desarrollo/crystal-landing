---
import IconScreenPointer from "@/assets/icons/screen-pointer.svg";
import Section from "@/components/section.astro";
import IconBarChart from "@/assets/icons/bar-chart.svg";
import IconCode from "@/assets/icons/code.svg";
import IconExclamationPoints from "@/assets/icons/exclamation-points.svg";
import { t } from "i18next";
---

<Section>
  <div
    class="flex flex-col lg:flex-row items-center justify-between gap-12 my-12 max-w-screen-xl"
  >
    <div
      class="flex flex-col items-center lg:items-start justify-center gap-4 w-full lg:w-1/2"
    >
      <h2 class="text-font-light text-center text-xl">
        {t("services.preTitle")}
      </h2>
      <h3 class="text-5xl font-bold text-center">{t("services.title")}</h3>
      <p class="text-2xl text-center text-balance lg:text-left">
        {t("services.description")}
      </p>
    </div>
    <div class="gap-8 grid grid-cols-1 md:grid-cols-2 w-full lg:w-1/2">
      <div
        class="flex flex-col gap-4 items-center justify-center p-8 lg:p-4 min-h-44 rounded-xl bg-gradient-to-b from-gray-700 via-gray-900 to-black"
      >
        <img src={IconScreenPointer.src} alt="Icon screen pointer" />

        <h3 class="text-xl font-semibold text-center text-pretty">
          {t("services.cardWebTitle")}
        </h3>
        <p class="text-center">{t("services.cardWebDescriptrion")}</p>
      </div>
      <div
        class="flex flex-col gap-4 items-center justify-center p-8 lg:p-4 min-h-44 rounded-xl bg-gradient-to-b from-gray-700 via-gray-900 to-black"
      >
        <img src={IconBarChart.src} alt="Icon screen pointer" />
        <h3 class="text-xl font-semibold text-center text-pretty">
          {t("services.cardSoftwareTitle")}
        </h3>
        <p class="text-center">{t("services.cardSoftwareDescription")}</p>
      </div>
      <div
        class="flex flex-col gap-4 items-center justify-center p-8 lg:p-4 min-h-44 rounded-xl bg-gradient-to-b from-gray-700 via-gray-900 to-black"
      >
        <img src={IconCode.src} alt="Icon screen pointer" />
        <h3 class="text-xl font-semibold text-center text-pretty">
          {t("services.cardDevelopmentTitle")}
        </h3>
        <p class="text-center">
          {t("services.cardDevelopmentDescription")}
        </p>
      </div>
      <div
        class="flex flex-col gap-4 items-center justify-center p-8 lg:p-4 min-h-44 rounded-xl bg-gradient-to-b from-gray-700 via-gray-900 to-black"
      >
        <img src={IconExclamationPoints.src} alt="Icon screen pointer" />
        <h3 class="text-xl font-semibold text-center text-pretty">
          {t("services.cardSolutionsTitle")}
        </h3>
        <p class="text-center">{t("services.cardSolutionsDescription")}</p>
      </div>
    </div>
  </div>
</Section>
