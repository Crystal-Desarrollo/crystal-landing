---
import { Section } from "../Section.jsx";
import Heart from "../../icons/heart.jsx";
import FunArrow from "../../icons/fun-arrow.jsx";
import { t } from "i18next";
import Gallery from "./Gallery.astro";
---

<Section id="projects" className="relative">
  <div class="flex flex-col items-center gap-2 mb-12 relative">
    <p class="text-xl text-font-light flex flex-row items-center">
      {t("ourWork.preTitle")}
      <Heart className="ml-1 h-8" />
    </p>
    <p class="text-5xl font-bold text-center relative">{t("ourWork.title")}</p>
    <FunArrow className="rotate-[150deg] absolute md:left-[40%] bottom-[-80%] flex flex-row items-center gap-2" />
  </div>

  <Gallery client:visible />
</Section>
